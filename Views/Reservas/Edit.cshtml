@model Final.Models.Reserva

@{
    ViewData["Title"] = "Editar Reserva";
}
@if (ViewBag.Message != null)
{
    <script type="text/javascript">
            window.onload = function () {
                alert("@ViewBag.Message");
            };
    </script>
}

@if (TempData["status"] != null)
{
    <script type="text/javascript">
            window.onload = function () {
                alert("@TempData["status"]");
            };
    </script>
}
<h1>Reservas</h1>

<h4 class="text-success">Editar - N° @Html.DisplayFor(model => model.id)</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="id" />
            <div class="form-group mt-3">
                <label asp-for="fDesde" class="control-label">Fecha inicio de reserva</label>
                <input asp-for="fDesde" class="form-control border-info text-info" required />
                <span asp-validation-for="fDesde" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <label asp-for="fHasta" class="control-label">Fecha fin de reserva</label>
                <input asp-for="fHasta" class="form-control border-info text-info" required />
                <span asp-validation-for="fHasta" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <label asp-for="precio" class="control-label">El precio total será recalculado automáticamente</label>
                <input asp-for="precio" class="form-control border-info text-info" required readonly="readonly" />
                <span asp-validation-for="precio" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <label asp-for="cantPersonas" class="control-label">Cantidad de personas</label>
                <input asp-for="cantPersonas" type="number" min="1" class="form-control border-info text-info" required />
                <span asp-validation-for="cantPersonas" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <label asp-for="propiedadId" class="control-label">Alojamiento N°</label>
                <select asp-for="propiedadId" class="form-control border-info text-info" required asp-items="ViewBag.propiedadId"></select>
                <span asp-validation-for="propiedadId" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <label asp-for="personaId" class="control-label">Usuario</label>
                <select asp-for="personaId" class="form-control border-info text-info" required asp-items="ViewBag.personaId"></select>
                <span asp-validation-for="personaId" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <input type="submit" value="Editar reserva" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index"><img src="/imagenes/deshacer32flat.png" alt="regresar" width="32" height="32" class="mt-3" /></a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
