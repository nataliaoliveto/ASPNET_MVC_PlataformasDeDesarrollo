@model Final.Models.Usuario

@{
    ViewData["Title"] = "Login";
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Travelinci</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap-darkly.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />

    @if (ViewBag.Message != null)
    {
        <script type="text/javascript">
            window.onload = function () {
                alert("@ViewBag.Message");
            };
        </script>
    }

</head>
<body>
    <div class="container">
        <main role="main" class="pb-3">
            <form asp-controller="Logins" asp-action="Login" method="post">
                <div class="form-group col-md-6 offset-md-3 d-inline-flex align-content-center justify-content-center">
                    <img src="~/imagenes/user64.png" alt="login" width="64" height="64" class="mt-3" />
                </div>
                <div class="form-group col-md-6 offset-md-3  mt-4">
                    <label asp-for="DNI">DNI</label>
                    <input asp-for="DNI" class="form-control border-info text-info" placeholder="Ingresar DNI" name="dni" required>
                </div>
                <div class="form-group col-md-6 offset-md-3  mt-4">
                    <label asp-for="password">Contraseña</label>
                    <input asp-for="password" type="password" class="form-control border-info text-info" placeholder="Ingresar contraseña" name="password" required>
                </div>
                <div class="form-group mt-4">
                    <button type="submit" class="btn btn-success btn-block col-md-6 offset-md-3">I n g r e s a r</button>
                </div>
                <div class="form-group mt-4">
                    <span class="col-md-6 offset-md-3">
                        <text class="link-info col-md-6 text-decoration-none text-danger">
                            @if (@TempData["status"] != null)
                            {
                                @TempData["status"].ToString();
                            }
                        </text>
                    </span>
                </div>
            </form>
            <div class="form-group mt-4">
                <button class="btn btn-outline-success btn-block col-md-6 offset-md-3"><a asp-area="" asp-controller="Logins" asp-action="Register" class="link-success col-md-6 text-decoration-none text-white">Registrarse</a></button>
            </div>
        </main>
    </div>
    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2021 Primera Escuela Multimedial Da Vinci - ACN4A Final Plataformas de Desarrollo
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
</body>
</html>


