@model Final.Models.Usuario

@{
    ViewData["Title"] = "Login";
    Layout = null;
}
@if (ViewBag.Message != null)
{
    <script type="text/javascript">
            window.onload = function () {
                alert("@ViewBag.Message");
            };
    </script>
}

@if (TempData["status"] != null)
{
    <script type="text/javascript">
            window.onload = function () {
                alert("@TempData["status"]");
            };
    </script>
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Travelinci</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap-darkly.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <div class="container">
        <main role="main" class="pb-3">
            <form asp-action="Register" method="post">
                <div class="form-group col-md-6 offset-md-3 d-inline-flex align-content-center justify-content-center">
                    <img src="~/imagenes/user64.png" alt="login" width="64" height="64" class="mt-3" />
                </div>
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group form-label mt-2 col-md-6 offset-md-3 align-content-center justify-content-center">
                    <label asp-for="DNI" class="control-label"> DNI</label>
                    <input asp-for="DNI" type="number" class="form-control border-info text-info" required />
                    <span asp-validation-for="DNI" class="text-danger"></span>
                </div>
                <div class="form-group form-label mt-2 col-md-6 offset-md-3 align-content-center justify-content-center">
                    <label asp-for="nombre" class="control-label"> Nombre</label>
                    <input asp-for="nombre" class="form-control border-info text-info" required />
                    <span asp-validation-for="nombre" class="text-danger"></span>
                </div>
                <div class="form-group form-label mt-2 col-md-6 offset-md-3 align-content-center justify-content-center">
                    <label asp-for="mail" class="control-label"> Email</label>
                    <input asp-for="mail" class="form-control border-info text-info" required />
                    <span asp-validation-for="mail" class="text-danger"></span>
                </div>
                <div class="form-group form-label mt-2 col-md-6 offset-md-3 align-content-center justify-content-center">
                    <label asp-for="password" class="control-label">Contraseña</label>
                    <input asp-for="password" class="form-control border-info text-info" required type="password" name="password" />
                    <span asp-validation-for="password" class="text-danger"></span>
                </div>
                <div class="form-group form-label mt-2 col-md-6 offset-md-3 align-content-center justify-content-center">
                    <label class="control-label"> Repetir Contraseña</label>
                    <input name="confirmPassword" class="form-control border-info text-info" required type="password" />
                    <span asp-validation-for="password" class="text-danger"></span>
                </div>
                <div class="form-group form-label mt-4 col-md-6 offset-md-3 align-content-center justify-content-center">
                    <input type="submit" class="btn btn-success btn-block col-md-6 offset-md-3" value="R e g i s t r a r s e" />
                </div>
            </form>
            <div class="form-group form-label mt-2 col-md-6 offset-md-3 align-content-center justify-content-center">
                <span class="col-md-6 offset-md-4"><a asp-area="" asp-controller="Logins" asp-action="Index" class="link-info col-md-6 text-decoration-none text-success">¿Ya tienes cuenta? Ingresar</a></span>
            </div>
        </main>

    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2021 Primera Escuela Multimedial Da Vinci - ACN4A Final Plataformas de Desarrollo
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
</body>
</html>