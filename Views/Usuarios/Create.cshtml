@model Final.Models.Usuario

@{
    ViewData["Title"] = "Crear Usuario";
}

@if (ViewBag.Message != null)
{
    <script type="text/javascript">
            window.onload = function () {
                alert("@ViewBag.Message");
            };
    </script>
}

@if (TempData["status"] != null)
{
    <script type="text/javascript">
            window.onload = function () {
                alert("@TempData["status"]");
            };
    </script>
}
<h1>Usuarios</h1>

<h4 class="text-success">Nuevo</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group form-label mt-3">
                <label asp-for="DNI" class="control-label"> DNI</label>
                <input asp-for="DNI" class="form-control border-info text-info" required />
                <span asp-validation-for="DNI" class="text-danger"></span>
            </div>
            <div class="form-group form-label mt-3">
                <label asp-for="nombre" class="control-label"> Nombre</label>
                <input asp-for="nombre" class="form-control border-info text-info" required />
                <span asp-validation-for="nombre" class="text-danger"></span>
            </div>
            <div class="form-group form-label mt-3">
                <label asp-for="mail" class="control-label"> Email</label>
                <input asp-for="mail" class="form-control border-info text-info" required />
                <span asp-validation-for="mail" class="text-danger"></span>
            </div>
            <div class="form-group form-label mt-3">
                <label asp-for="password" class="control-label"> Contraseña</label>
                <input asp-for="password" class="form-control border-info text-info" required />
                <span asp-validation-for="password" class="text-danger"></span>
            </div>

            <div class="form-group form-check mt-3">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="esADMIN" /> ¿Es Administrador?
                </label>
            </div>

            <div class="form-group mt-3">
                <input type="submit" value="Crear Usuario" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index"><img src="/imagenes/deshacer32flat.png" alt="regresar" width="32" height="32" class="mt-3" /></a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
