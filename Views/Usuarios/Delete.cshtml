@model Final.Models.Usuario

@{
    ViewData["Title"] = "Eliminar Reserva";
}
@if (ViewBag.Message != null)
{
    <script type="text/javascript">
            window.onload = function () {
                alert("@ViewBag.Message");
            };
    </script>
}

@if (TempData["status"] != null)
{
    <script type="text/javascript">
            window.onload = function () {
                alert("@TempData["status"]");
            };
    </script>
}
<h1>Eliminar</h1>

<h3 class="text-warning">Usuario - @Html.DisplayFor(model => model.DNI)</h3>
<div>
    <div>
        <img src="/imagenes/siren32.png" alt="alerta" width="32" height="32" class="mb-2" />
        <h4 class="text-danger d-inline-block mt-1">
            Acción irreversible
        </h4>
        <img src="/imagenes/siren32.png" alt="alerta" width="32" height="32" class="mb-2" />
    </div>
    <div>
        <p class="text-danger d-inline-block mt-1 mb-0">Se eliminarán también todas las reservas realizadas por el usuario</p>
    </div>
    <hr />
    <dl class="row">
        <dt class="col-sm-3">
            DNI
        </dt>
        <dd class="col-sm-7">
            @Html.DisplayFor(model => model.DNI)
        </dd>
        <dt class="col-sm-3">
            Nombre
        </dt>
        <dd class="col-sm-7">
            @Html.DisplayFor(model => model.nombre)
        </dd>
        <dt class="col-sm-3">
            Mail
        </dt>
        <dd class="col-sm-7">
            @Html.DisplayTextFor(model => model.mail)
        </dd>
        <dt class="col-sm-3">
            ¿Es administrador?
        </dt>
        @if (@Html.DisplayTextFor(model => model.esADMIN).ToUpper() == "TRUE")
        {
            <dd class="col-sm-7">Sí</dd>
        }
        else
        {
            <dd class="col-sm-7">No</dd>
        }
        <dt class="col-sm-3">
            ¿Está bloqueado?
        </dt>
        @if (@Html.DisplayTextFor(model => model.bloqueado).ToUpper() == "TRUE")
        {
            <dd class="col-sm-7">Sí</dd>
        }
        else
        {
            <dd class="col-sm-7">No</dd>
        }
    </dl>

    <form asp-action="Delete">
        <div class="form-group mt-3">
            <input type="hidden" asp-for="id" />
            <input type="hidden" asp-for="DNI" />
            <input type="submit" value="Eliminar Usuario" class="btn btn-danger" />
            <div>
                <a asp-action="Index"><img src="/imagenes/deshacer32flat.png" alt="regresar" width="32" height="32" class="mt-3" /></a>
            </div>
        </div>
    </form>
</div>
